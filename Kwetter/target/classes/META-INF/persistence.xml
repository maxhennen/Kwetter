<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="NewPersistenceUnit">

        <class>domain.Kweet</class>
        <class>domain.user.User</class>
        <class>domain.user.Details</class>
        <class>domain.user.Location</class>
        <class>domain.user.Role</class>
        <class>domain.Like</class>


        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/kwetter-db"/>
            <property name="javax.persistence.jdbc.user" value="root" />
            <property name="javax.persistence.jdbc.password" value="root" />

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <!--<property name="javax.persistence.schema-generation.scripts.action" value="drop-and-create"/>-->
            <!--<property name="javax.persistence.schema-generation.scripts.create-target" value="sampleCreate.ddl"/>-->
            <!--<property name="javax.persistence.schema-generation.scripts.drop-target" value="sampleDrop.ddl"/>-->
        </properties>
    </persistence-unit>
</persistence>